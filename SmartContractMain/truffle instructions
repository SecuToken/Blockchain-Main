// Get the deployed contract instance
let instance = await SecuToken.deployed()

// Get the contract owner
let owner = await instance.owner()
owner  // Should match the address you deployed from

// Check the contract balance
let balance = await instance.getBalance()
balance.toString()  // Convert from BN to string to see the value in wei

// Send Ether to the contract
web3.eth.sendTransaction({
  from: accounts[0],  // Your account
  to: instance.address,
  value: web3.utils.toWei("1", "ether")
})

// Check the updated balance
balance = await instance.getBalance()
balance.toString()

// Withdraw Ether (only works if called by owner)
await instance.withdraw(web3.utils.toWei("0.5", "ether"))

// Check the balance again
balance = await instance.getBalance()
balance.toString()